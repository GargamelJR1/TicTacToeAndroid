<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TicTacToe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="materialButtonStyle">@style/DarkButtonText</item>
    </style>

    <style name="Theme.TicTacToeActionBar" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/light_gray</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="materialButtonStyle">@style/DarkButtonText</item>
    </style>

    <style name="DarkButtonText" parent="@style/Widget.Material3.Button">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:textColorHighlight">@color/light_gray</item>
    </style>
</resources>